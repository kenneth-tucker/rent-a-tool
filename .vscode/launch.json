{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Backend",
            "program": "${workspaceFolder}/backend/dist/server.js",
            "preLaunchTask": "npm: build - backend",
            "runtimeArgs": ["--inspect"],
            "outFiles": [
                "${workspaceFolder}/backend/dist/**/*.js"
            ],
            "autoAttachChildProcesses": true,
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}